rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for authentication and authorization
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    function hasAnyRole(roles) {
      return isAuthenticated() && getUserData().role in roles;
    }
    
    function hasPermission(collection, operation) {
      return isAuthenticated() && 
             getUserData().permissions[collection][operation] == true;
    }
    
    function isAdmin() {
      return hasAnyRole(['superadmin', 'admin']);
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isClientOwner(clientId) {
      return isAuthenticated() && getUserData().clientId == clientId;
    }

    // Users collection - Allow user creation for authentication flow
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated(); // Allow authenticated users to create their own user document
      allow delete: if hasRole('superadmin');
    }

    // Clients collection - Based on permissions and ownership
    match /clients/{clientId} {
      allow read: if hasPermission('clients', 'read') || isClientOwner(clientId);
      allow create: if hasPermission('clients', 'write');
      allow update: if hasPermission('clients', 'write') || 
                       (isClientOwner(clientId) && 
                        !('role' in request.resource.data) && 
                        !('permissions' in request.resource.data));
      allow delete: if hasPermission('clients', 'delete');
      
      // Payment methods subcollection
      match /paymentMethods/{methodId} {
        allow read, write: if hasPermission('clients', 'write') || 
                             isClientOwner(clientId);
      }
    }

    // Services collection - Based on permissions and client ownership
    match /services/{serviceId} {
      allow read: if hasPermission('services', 'read') || 
                     isClientOwner(resource.data.clientId);
      allow create: if hasPermission('services', 'write');
      allow update: if hasPermission('services', 'write');
      allow delete: if hasPermission('services', 'delete');
    }

    // Invoices collection - Based on permissions and client ownership
    match /invoices/{invoiceId} {
      allow read: if hasPermission('billing', 'read') || 
                     isClientOwner(resource.data.clientId);
      allow create: if hasPermission('billing', 'write');
      allow update: if hasPermission('billing', 'write');
      allow delete: if hasRole('superadmin');
    }

    // Payments collection - Only billing staff can access
    match /payments/{paymentId} {
      allow read: if hasPermission('billing', 'read');
      allow write: if hasPermission('billing', 'write');
      allow delete: if hasRole('superadmin');
    }

    // Tickets collection - Support staff and client owners can access
    match /tickets/{ticketId} {
      allow read: if hasPermission('support', 'read') || 
                     isClientOwner(resource.data.clientId);
      allow create: if isAuthenticated(); // Anyone can create tickets
      allow update: if hasPermission('support', 'write') || 
                       isClientOwner(resource.data.clientId);
      allow delete: if hasRole('superadmin');
    }

    // Domains collection
    match /domains/{domainId} {
      allow read: if hasPermission('services', 'read') || 
                     isClientOwner(resource.data.clientId);
      allow write: if hasPermission('services', 'write');
      allow delete: if hasPermission('services', 'delete');
    }

    // Servers collection - Only admin and technical staff
    match /servers/{serverId} {
      allow read: if hasAnyRole(['superadmin', 'admin', 'support']);
      allow write: if hasAnyRole(['superadmin', 'admin']);
      allow delete: if hasRole('superadmin');
    }

    // Analytics collection - Read-only for authorized users
    match /analytics/{docId} {
      allow read: if hasPermission('analytics', 'read');
      allow write: if hasRole('superadmin'); // Only system can write analytics
    }

    // CMS Content - Public read, authorized write
    match /cms_content/{contentId} {
      allow read: if true; // Public content
      allow write: if hasPermission('cms', 'write');
      allow delete: if hasPermission('cms', 'write');
    }

    // Offers and promotions
    match /offers/{offerId} {
      allow read: if true; // Public
      allow write: if hasPermission('cms', 'write');
      allow delete: if hasPermission('cms', 'write');
    }

    // Testimonials
    match /testimonials/{testimonialId} {
      allow read: if true; // Public
      allow create: if isAuthenticated(); // Clients can submit testimonials
      allow update: if hasPermission('cms', 'write'); // Only staff can approve/edit
      allow delete: if hasPermission('cms', 'write');
    }

    // Team members - Public read, admin write
    match /team/{memberId} {
      allow read: if true; // Public
      allow write: if hasAnyRole(['superadmin', 'admin']);
      allow delete: if hasRole('superadmin');
    }

    // Job positions
    match /jobs/{jobId} {
      allow read: if true; // Public
      allow write: if hasAnyRole(['superadmin', 'admin']);
      allow delete: if hasRole('superadmin');
    }

    // Press releases - Public read, admin write
    match /press/{pressId} {
      allow read: if true; // Public
      allow write: if hasAnyRole(['superadmin', 'admin']);
      allow delete: if hasRole('superadmin');
    }

    // FAQs - Public read, staff write
    match /faqs/{faqId} {
      allow read: if true; // Public
      allow write: if hasPermission('cms', 'write');
      allow delete: if hasPermission('cms', 'write');
    }

    // Knowledge base - Public read, support write
    match /knowledge_base/{kbId} {
      allow read: if true; // Public
      allow write: if hasPermission('support', 'write');
      allow delete: if hasPermission('support', 'write');
    }

    // Leads - Sales and admin access
    match /leads/{leadId} {
      allow read: if hasAnyRole(['superadmin', 'admin', 'sales']);
      allow write: if hasAnyRole(['superadmin', 'admin', 'sales']);
      allow delete: if hasRole('superadmin');
    }

    // Email campaigns - Marketing access
    match /email_campaigns/{campaignId} {
      allow read: if hasAnyRole(['superadmin', 'admin', 'sales']);
      allow write: if hasAnyRole(['superadmin', 'admin']);
      allow delete: if hasRole('superadmin');
    }

    // System configuration - Only superadmin
    match /system_config/{configId} {
      allow read: if hasRole('superadmin');
      allow write: if hasRole('superadmin');
    }

    // Audit logs - Read-only for admins
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Only Cloud Functions can write audit logs
    }

    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}