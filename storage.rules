rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload files to their own folders
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow clients to upload files to their client folder
    match /clients/{clientId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.clients.write == true);
    }
    
    // Public assets (logos, avatars, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['superadmin', 'admin'];
    }
    
    // CMS assets (blog images, etc.)
    match /cms/{allPaths=**} {
      allow read: if true; // Public content
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.cms.write == true;
    }
    
    // Invoice PDFs and documents
    match /invoices/{clientId}/{allPaths=**} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId == clientId ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.billing.read == true);
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.permissions.billing.write == true;
    }
    
    // Ticket attachments
    match /tickets/{ticketId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // System backups (admin only)
    match /backups/{allPaths=**} {
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}